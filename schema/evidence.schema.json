{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Evidence Registry",
  "description": "Validates the evidence/_registry.yml file",
  "type": "object",
  "required": ["evidence"],
  "properties": {
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "source", "collection", "frequency", "path", "status"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^EVD-\\d{3}$",
            "description": "Evidence identifier (e.g., EVD-001)"
          },
          "title": {
            "type": "string",
            "description": "Evidence title"
          },
          "frameworks": {
            "type": "object",
            "properties": {
              "iso27001": {
                "type": "object",
                "properties": {
                  "controls": {
                    "type": "array",
                    "items": { "type": "string", "pattern": "^A\\.\\d+\\.\\d+$" }
                  }
                },
                "required": ["controls"]
              },
              "soc2": {
                "type": "object",
                "properties": {
                  "criteria": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                },
                "required": ["criteria"]
              },
              "gdpr": {
                "type": "object",
                "properties": {
                  "articles": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                },
                "required": ["articles"]
              }
            },
            "additionalProperties": false
          },
          "source": {
            "type": "string",
            "description": "Evidence source (e.g., aws, github, google-workspace, manual)"
          },
          "collection": {
            "type": "string",
            "enum": ["automated", "manual"]
          },
          "frequency": {
            "type": "string",
            "enum": ["daily", "weekly", "monthly", "quarterly", "annually", "on-demand"]
          },
          "last_collected": {
            "anyOf": [
              { "type": "string", "format": "date" },
              { "type": "null" }
            ],
            "description": "Date evidence was last collected"
          },
          "next_due": {
            "anyOf": [
              { "type": "string", "format": "date" },
              { "type": "null" }
            ],
            "description": "Date evidence is next due for collection"
          },
          "path": {
            "type": "string",
            "description": "Path to the evidence file"
          },
          "status": {
            "type": "string",
            "enum": ["current", "stale", "missing"]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
